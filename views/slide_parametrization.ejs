<% if (!isTeacher) { %>

<canvas id="threejs-canvas" class="m-3" width="<%= canvas_width %>" height="<%= canvas_height %>"></canvas>

<table id="parametrization-table">
    <tr>
        <td data-toggle="buttons">
            <div class="form-group align-items-center">
                <!-- mx-2 specifies both margin left and right -->
                <label class="w-100 btn btn-outline-primary p-2">
                    <input type="radio" class="btn-check" name="param_options" value="0" id="option1" autocomplete="off" />
                    <p class="mt-2 mx-2">
                        \(x = (R_1 + R_2 \cos(v)) cos(u)\)<br />
                        \(y = (R_1 + R_2 \cos(v)) sin(u)\)<br />
                        \(z = R_2 \sin(v)\)<br />
                        \(u \in [0, 2\pi),\; v \in [0, 2\pi)\)
                    </p>
                </label>
            </div>
        </td>
        <td class="align-middle">
            =
        </td>
        <td class="drop-targets">
            <div class="drop-box card p-3 object-draggable-name justify-content-center align-items-center text-center" draggable="true" id="drop-box1">
                Sphere
            </div>
        </td>
    </tr>
    <tr>
        <td data-toggle="buttons">
            <div class="form-group align-items-center">
                <label class="w-100 btn btn-outline-primary p-2">
                    <input type="radio" class="btn-check" name="param_options" value="1" id="option2" autocomplete="off" />
                    <p class="mt-2 mx-2">
                        \(x = r + \cos(v / 2) * \sin(u) - \sin(v / 2) * \sin(2 * u)) * \cos(v) \)<br />
                        \(y = (r + \cos(v / 2) * \sin(u) - \sin(v / 2) * \sin(2 * u)) * \sin(v) \)<br />
                        \(z = \sin(v / 2) * \sin(u) + \cos(v / 2) * \sin(2 * u) \)<br />
                        \(u \in [0, 2\pi),\; v \in [-\pi, \pi)\)
                    </p>
                </label>
            </div>
        </td>
        <td class="align-middle">
            =
        </td>
        <td class="drop-targets">
            <div class="drop-box card p-3 object-draggable-name justify-content-center align-items-center text-center" draggable="true" id="drop-box2">
                Torus
            </div>
        </td>
    </tr>
    <tr>
        <td data-toggle="buttons">
            <div class="form-group align-items-center">
                <label class="w-100 btn btn-outline-primary p-2">
