<div id="graphs_results" class="card m-3" style="min-width: 300px;">

    <div class="card-header">Students' answers</div>

    <div class="card-body">

        <div id="student_answers_div_image" class="d-none">
            <div>
                <section>

                    <h5>\( \alpha \) success rate: <%= alpha_p %> %</h5>
                    <div class="progress" style="background-color: lightgrey;">
                        <div class="progress-bar progress-bar-striped <% if (alpha_p > 75) { %>bg-success<% } else if (alpha_p > 50) { %>bg-warning<% } else { %>bg-danger<% } %> text-center text-nowrap"
                            style="width:<%= alpha_p %>%"></div>
                    </div>

                    <h5 class="mt-3">\( \frac{\beta}{\gamma} \) success rate: <%= beta_gamma_p %> %</h5>
                    <div class="progress" style="background-color: lightgrey;">
                        <div class="progress-bar progress-bar-striped <% if (beta_gamma_p > 75) { %>bg-success<% } else if (beta_gamma_p > 50) { %>bg-warning<% } else { %>bg-danger<% } %> text-center text-nowrap"
                            style="width:<%= beta_gamma_p %>%"></div>
                    </div>

                </section>
            </div>
            <div>
                <canvas id="alpha_chart" class="mt-3" style="width:100%; max-width:600px"></canvas>
                <canvas id="beta_gamma_chart" class="mt-3" style="width: 100%; max-width: 600px;"></canvas>
            </div>
        </div>

    </div>

</div>

<div class="d-flex flex-column align-items-start m-3">
        <button id="hidden" data-action="show-images-answers" class="btn btn-primary mb-3 p-2 disabled enabled-on-answer" disabled="true">Show answers</button>
    <% if (showButtons) { %>
        <button data-action="reset" class="btn btn-outline-danger mb-3 p-2 disabled enabled-on-answer" disabled="true">Reset answers</button>
        <button data-action="send-answers" class="btn btn-outline-primary mb-3 p-2 disabled enabled-on-answer" disabled="true">Send answers to students</button>
    <% } %>
</div>
