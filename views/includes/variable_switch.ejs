<div class="form-check form-switch">
    <input class="form-check-input" type="checkbox" id="<%= id %>" 
        <% if (checked){ %>
            checked 
        <% } %> 
        <% if (disabled){ %>
            disabled 
        <% } %> 
    />
    <label class="form-check-label" for="checkbox-aposition"><%- text %></label>
</div>